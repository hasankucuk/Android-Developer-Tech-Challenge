<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="App.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_34_sp</item>
        <item name="android:textColor">@color/titleColorRed</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextView.Day" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_40_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextView.Month" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_40_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextView.Market.Title" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_13_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="App.TextView.Market.Price" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_13_sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="App.TextView.Market.Detail" parent="android:Widget.TextView">
        <item name="android:textSize">@dimen/unit_13_sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="App.Login.Edittext" parent="android:Widget.EditText">
        <item name="android:layout_marginStart">@dimen/unit_20_dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_20_dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColorHint">@color/editTextHintColor</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/unit_10_dp</item>
        <item name="android:drawablePadding">@dimen/unit_10_dp</item>
    </style>

    <style name="App.Red.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_red_button</item>
        <item name="android:layout_marginStart">@dimen/unit_20_dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_20_dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="App.Red.Outlined.Button" parent="android:Widget.Button">
        <item name="android:background">@drawable/bg_outlined_red_button</item>
        <item name="android:layout_marginStart">@dimen/unit_20_dp</item>
        <item name="android:layout_marginEnd">@dimen/unit_20_dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
